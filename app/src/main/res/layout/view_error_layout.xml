<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pageerrLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/window_background" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/img_error_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pagefailed_bg"
                    android:visibility="gone" />
                <me.jessyan.mvparms.demo.widget.CircularProgressBar
                    android:id="@+id/animProgress"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:indeterminate="true"
                    android:indeterminateOnly="false"
                    android:layout_centerInParent="true"
                    app:cpb_color="@color/blue"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_error_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.0dip"
                android:lines="2"
                android:gravity="center"
                android:text="@string/error_view_click_to_refresh"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>